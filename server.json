{
    "name":"Intro-to-MVC",
    "app":{
        "cfengine":"adobe@2023"
    },
    "web":{
        "rewrites":{
            "enable":true
        },
        "rules":[
            "regex-nocase('^\\/(MVCApp.+?)\\/(.+)$') -> rewrite( '/\\${1}/index.cfm/\\${2}' )"
        ],
        "http":{
            "port":8080
        }
    },
    "JVM":{
        "heapSize":"2048",
        "javaVersion":"openjdk17"
    },
    "scripts":{
        "onServerInitialInstall":"cfpm install derby,caching,debugger,administrator"
    }
}